{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@octolens/core": ["./packages/core/src"],
      "@octolens/cli": ["./packages/cli/src"],
      "@octolens/plugin-vite": ["./packages/plugins/vite/src"],
      "@octolens/plugin-nextjs": ["./packages/plugins/nextjs/src"]
    }
  },
  "include": ["packages/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/dist/**"
  ]
}
